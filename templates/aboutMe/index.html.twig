{% extends 'base.html.twig' %}
{% block title %}About Me{% endblock %}
{% block stylesheets %}{% endblock %}

{% block body %}

 	<div class="container">
        <div class="row">
            <div class="col-md-12">
            	<h2 class="font-roboto-thin">About Me</h2>
			    <h2 class="animated infinite bounce delay-2s">About Me</h2>
			    <example-component myprop="I can pass props!" index=4></example-component>
			 	<edu-counter></edu-counter>

				<!-- Button trigger modal -->
				<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
				    <i class="fa fa-cogs"></i> Show code
				</button>

				<!-- Modal -->
				<div class="modal fade fade-scale" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
					<div style="display: table; width: 100%; height: 100%;">
						<div style="display: table-cell; vertical-align: middle; position: relative;">
						    <div class="modal-dialog modal-lg" role="document">
							    <div class="modal-content">
							        <div class="modal-header">
								        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
								        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
								          <span aria-hidden="true">&times;</span>
								        </button>
							        </div>
							        <div class="modal-body">
							            ...
							        </div>
							        <div class="modal-footer">
							            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
							            <button type="button" class="btn btn-primary">Save changes</button>
							        </div>
							    </div>
						    </div>
						</div>
					</div>
				</div>

            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}{% endblock %}