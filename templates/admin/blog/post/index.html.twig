{% extends 'admin/layout.html.twig' %}

{% block title %}BlogPost index{% endblock %}

{% block content %}
    <section class="section-py-80 h-100 bg-clouds">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="d-flex flex-wrap justify-content-between align-items-center mb-5">
                        <h1 class="mb-0">Post</h1>
                        <a href="{{ path('admin_blog_post_new') }}" class="btn btn-pill btn-lg btn-midnight-blue px-5">Create new post</a>
                    </div>

                    <div class="accordion-space" id="accordionExample">
                        {% for blog_post in blog_posts %}
                            <div class="card bg-clouds-concave-145 shadow-clouds border-0">
                                <div class="card-header d-flex flex-wrap justify-content-between align-items-center" id="headingTwo">
                                    <div>
                                        <h2 class="mb-0">
                                            <a class="btn card-link collapsed" data-toggle="collapse" href="#collapse-{{ blog_post.slug }}" role="button" aria-expanded="false" aria-controls="collapse-{{ blog_post.slug }}"><i class="fas fa-plus-square mr-2"></i>{{ blog_post.title|raw }}</a>
                                        </h2>
                                        {# <small class="card-text">
                                            <i class="fa fa-calendar"></i> {{ blog_post.publishedAt ? blog_post.publishedAt|date('Y-m-d H:i:s') : '' }}</a>
                                            <span class="mx-2">|</span>
                                            <i class="fa fa-user"></i> {{ blog_post.authorEmail }}
                                        </small> #}
                                    </div>
                                    <div>
                                        <a href="{{ path('admin_blog_post_show', {'id': blog_post.id}) }}" class="btn btn-sm px-3 btn-pill btn-midnight-blue">show</a>
                                        <a href="{{ path('admin_blog_post_edit', {'id': blog_post.id}) }}" class="btn btn-sm px-3 btn-pill btn-midnight-blue">edit</a>
                                    </div>
                                </div>
                                <div id="collapse-{{ blog_post.slug }}" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
                                    <div class="card-body">
                                        {{ blog_post.excerpt }}
                                    </div>
                                    <div class="card-body text-center">
                                        <a class="btn btn-sm px-3 btn-pill {{ blog_post.showComment ? 'btn-turquoise' : 'btn-pomegranate' }}" href="{{ path('admin_blog_post_showcomment', {'id': blog_post.id}) }}">
                                            <i class="fas fa-fw {{ blog_post.showComment ? 'fa-check' : 'fa-times' }}"></i> show comment
                                        </a>

                                        <a class="btn btn-sm px-3 btn-pill {{ blog_post.enableComment ? 'btn-turquoise' : 'btn-pomegranate' }}" href="{{ path('admin_blog_post_enablecomment', {'id': blog_post.id}) }}">
                                            <i class="fas fa-fw {{ blog_post.enableComment ? 'fa-check' : 'fa-times' }}"></i> enable comment
                                        </a>

                                        <a href="{{ path('admin_blog_post_remove', {'id': blog_post.id}) }}" class="btn btn-sm px-3 btn-pill btn-pomegranate" onclick="if(!confirm('{% trans %}Are you sure?{% endtrans %}')) { return false; }">delete</a>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <p>no records found</p>
                        {% endfor %}
                    </div>
                </div>
                <div class="col-12 mt-5">
                    {{ knp_pagination_render(blog_posts) }}
                </div>
            </div>
        </div>
    </section>
