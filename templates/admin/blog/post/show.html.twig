{% extends 'admin/layout.html.twig' %}

{% block title %}BlogPost{% endblock %}

{% block content %}
    <section class="section-py-80 h-100 bg-clouds">
        <div class="container">


            <div class="row">
                <div class="col">
                    <div class="d-flex flex-wrap justify-content-between align-items-center mb-5">
                        <h1 class="mb-0">BlogPost</h1>
                        <div>
                            <a href="{{ path('admin_blog_post_index') }}" class="btn btn-pill btn-lg btn-midnight-blue px-5">Back to list</a>
                            <a href="{{ path('admin_blog_post_edit', {'id': blog_post.id}) }}" class="btn btn-pill btn-lg btn-midnight-blue px-5">Edit</a>
                        </div>
                    </div>

                    <div class="row mb-5">
                        {% if blog_post.images is empty %}
                            <p>No images</p>
                        {% else %}   
                            {% for image in blog_post.images %}
                                {% if image.image is empty %}
                                    <div class="col">
                                        <p>No images</p>
                                    </div>
                                {% else %}
                                    <div class="col-3">
                                        <img class="img-fluid" src="{{ asset('images/blog/') }}{{ image.image }}" alt="{{ blog_post.title|raw }}">
                                    </div>
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                    </div>
                    
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ blog_post.id }}</td>
                            </tr>
                            <tr>
                                <th>Title</th>
                                <td>{{ blog_post.title }}</td>
                            </tr>
                            <tr>
                                <th>Slug</th>
                                <td>{{ blog_post.slug }}</td>
                            </tr>
                            <tr>
                                <th>Excerpt</th>
                                <td>{{ blog_post.excerpt }}</td>
                            </tr>
                            <tr>
                                <th>Content</th>
                                <td>{{ blog_post.content }}</td>
                            </tr>
                            <tr>
                                <th>AuthorEmail</th>
                                <td>{{ blog_post.authorEmail }}</td>
                            </tr>
                            <tr>
                                <th>StatusPost</th>
                                <td>{{ blog_post.statusPost }}</td>
                            </tr>
                            <tr>
                                <th>ShowComment</th>
                                <td>{{ blog_post.showComment ? 'Yes' : 'No' }}</td>
                            </tr>
                            <tr>
                                <th>EnableComment</th>
                                <td>{{ blog_post.enableComment ? 'Yes' : 'No' }}</td>
                            </tr>
                            <tr>
                                <th>ViewsPost</th>
                                <td>{{ blog_post.viewsPost }}</td>
                            </tr>
                            <tr>
                                <th>PublishedAt</th>
                                <td>{{ blog_post.publishedAt ? blog_post.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th>UpdatedAt</th>
                                <td>{{ blog_post.updatedAt ? blog_post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                        </tbody>
                    </table>

                    {{ include('admin/blog/post/_delete_form.html.twig') }}
                    
                </div>
            </div>
        </div>
    </section>
{% endblock %}
