{% extends 'admin/layout.html.twig' %}

{% block title %}Contact{% endblock %}

{% block content %}
    <section class="section-py-80">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h1>Contact</h1>

                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ contact.id }}</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>{{ contact.name }}</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>{{ contact.email }}</td>
                            </tr>
                            <tr>
                                <th>Subject</th>
                                <td>{{ contact.subject }}</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>{{ contact.description }}</td>
                            </tr>
                            <tr>
                                <th>CreatedAt</th>
                                <td>{{ contact.createdAt ? contact.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                        </tbody>
                    </table>

                    <a class="btn btn-pill btn-outline-midnight-blue" href="{{ path('admin_contact_index') }}">Back to list</a>

                    <a class="btn btn-pill btn-outline-midnight-blue" href="{{ path('admin_contact_edit', {'id': contact.id}) }}">Edit</a>

                    {{ include('admin/contact/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
