{% extends 'base.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}

    <section class="section-py-80">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h1>Contact index admin</h1>

                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Subject</th>
                                <th>Description</th>
                                <th>CreatedAt</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for contact in contacts %}
                            <tr>
                                <td>{{ contact.id }}</td>
                                <td>{{ contact.name }}</td>
                                <td>{{ contact.email }}</td>
                                <td>{{ contact.subject }}</td>
                                <td>{{ contact.description }}</td>
                                <td>{{ contact.createdAt ? contact.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                <td>
                                    <a href="{{ path('admin_contact_show', {'id': contact.id}) }}">show</a>
                                    <a href="{{ path('admin_contact_edit', {'id': contact.id}) }}">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
