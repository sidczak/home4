{% extends 'base.html.twig' %}
{% block title %}About Me{% endblock %}
{% block stylesheets %}{% endblock %}

{% block body %}
<section class="d-flex flex-shrink-0 section-py-80 section-min-h-100 section--image section--image-about-me section--parallax"></section>

<home-timeline is-section="true" title="Process" icon="fa-tools" timeline-data="process"></home-timeline>

{# <home-skill></home-skill> #}

<section class="d-flex flex-shrink-0 align-items-center section-py-80 bg-light">    
        <div class="container">
            <div class="row">
                <div class="col text-center">
                    <h2 class="font-roboto-bold"><i class="fas fa-fw fa-tools"></i> Skills</h2>
                </div>
            </div>
            <div class="row">
                <div class="col mt-5 text-center">
                    <home-skill-progress icon="fab fa-fw fa-symfony" skill="Symfony" radius="100" stroke="10" color="#34495e" progress="75"></home-skill-progress>
                </div>
                <div class="col mt-5 text-center">
                    <home-skill-progress icon="fab fa-fw fa-vuejs" skill="Vue" radius="100" stroke="10" progress="85"></home-skill-progress>
                </div>
                <div class="col mt-5 text-center">
                    <home-skill-progress icon="fab fa-fw fa-bootstrap" skill="Bootstrap" radius="100" stroke="10" color="#9b59b6" progress="95"></home-skill-progress>
                </div>
                <div class="col mt-5 text-center">
                    <home-skill-progress icon="fab fa-fw fa-github" skill="git" radius="100" stroke="10" color="#34495e" progress="85"></home-skill-progress>
                </div>
            </div>
        </div>
</section>
<section class="section-py-80">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <home-timeline title="Education" icon="fa-graduation-cap" position="end" timeline-data="education"></home-timeline>
            </div>
            <div class="col-lg-5 mt-5 mt-lg-0">
                <home-timeline title="Work Experience" icon="fa-briefcase" position="start" timeline-data="experience"></home-timeline>
            </div>
        </div>
    </div>
</section>

{% endblock %}

{% block javascripts %}{% endblock %}