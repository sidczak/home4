<nav id="sidebarBlogMenu" class="col-lg-3 bg-turquoise d-lg-block collapse">
    <div class="text-white section-py-80 w-100">
        <div class="text-center mb-5">
            <i class="fas fa-blog fa-5x mb-3"></i>
            <h2>Blog</h2>
        </div>
        <div class="page-header">
            <h4><i class="fa fa-fw fa-share-alt"></i> {{'Categories'|upper}}</h4>
            <p>
                {% for category in categories %}
                    <a href="{{ path('blog_category_show', {'id': category.id, 'category_slug': category.slug }) }}" class="btn btn-sm btn-pill btn-midnight-blue my-1">{{ category.name }}</a>
                {% endfor %}
            </p>
        </div>
        <div class="page-header">
            <h4><i class="fa fa-fw fa-tags"></i> {{'Tags'|upper}}</h4>
            <p>
                {% for tag in tags %}
                    <a href="{{ path('blog_tag_show', {'id': tag.id, 'tag_slug': tag.slug}) }}" class="btn btn-sm btn-pill btn-midnight-blue my-1">{{ tag.name }}</a>
                {% endfor %}
            </p>
        </div>
{# 
        <div class="page-header">
            <h4><i class="fas fa-fw fa-archive"></i> {{'Archives'|upper}}</h4>
        </div>
        <div class="page-header">
            <h4>{{'Recently added posts'|upper}}</h4>
        </div>
#}
        {% if app.session.get('recently_viewed_posts') %}
            <div class="page-header">
                <h4 class="text-white">{{'Recently viewed posts'|upper}}</h4>
            </div>
            {% for blog_post in app.session.get('recently_viewed_posts') %}
                <div class="card bg-turquoise-concave-145 shadow-turquoise-sm border-0 mb-3">
                    <div class="card-body">
                        <h6 class="card-title mb-0"><a href="{{ path('blog_post_show', { 'id': blog_post.id, 'category': blog_post.category, 'title': blog_post.slug }) }}" class="text-white">{{ blog_post.title|raw }}</a></h6>
                    </div>
                </div>
            {% endfor %}
        {% endif %}

    </div>
</nav>