{% extends 'blog/layout.html.twig' %}
{% block title %}Start{% endblock %}
{% block stylesheets %}{% endblock %}

{% block content_blog %}
<div class="col p-0 bg-clouds">
    <section class="section-pb-80 section-pt-152">
        <div class="container">
            <div class="row">
                <div class="col-12 mb-5">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb breadcrumb-angle-right breadcrumb-light justify-content-center bg-transparent text-uppercase small">
                            <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Home</a></li>
                            <li class="breadcrumb-item"><a href="{{ path('blog_post_index') }}">Blog</a></li>
                            {# <li class="breadcrumb-item"><a href="{{ path('blog_category_show', { 'slug': blog_post.category.slug }) }}">{{ blog_post.category }}</a></li> #}
                            <li class="breadcrumb-item"><a href="{{ path('blog_category_show', { 'id': blog_post.category.id, 'category_slug': blog_post.category.slug }) }}">{{ blog_post.category }}</a></li>
                            <li class="breadcrumb-item active" aria-current="page">{{ blog_post.title|title|raw }}</li>
                        </ol>
                    </nav>
                    <div class="title title-white d-flex justify-content-center align-items-center mb-4">
                        <h2>Blog</h2>
                        <h3>Post detail</h3>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="card bg-clouds-concave-145 shadow-clouds-sm border-0 mb-5">
                        <div class="card-body">
                            <h3 class="card-title">{{ blog_post.title|title|raw }}</h3>
                            <small class="card-text">
                                <i class="fa fa-calendar"></i> <a href="#">{% if blog_post.publishedat %}{{ blog_post.publishedat|date('l, F j, Y') }}{% endif %}</a> | 
                                <i class="fa fa-user"></i> <a href="#">{{ blog_post.authoremail }}</a>
                            </small>
                        </div>

                        {# {% for image in blog_post.images|slice(0,1) %}
                            <img class="card-img-bottom img-fluid" src="{{ asset('images/blog/') }}{{ image.image }}" alt="{{ blog_post.title|raw }}">
                        {% endfor %} #}

                        {# {% for image in blog_post.images|slice(0,1) %}
                            <img class="card-img-bottom img-fluid" src="{{ asset('images/blog/')|imagine_filter('blog_post_600x400') }}{{ image.image }}" alt="{{ blog_post.title|raw }}">
                        {% endfor %} #}
                        {% if blog_post.images|length > 1 %}
                            <div id="carousel-{{ blog_post.id }}" class="carousel carousel-fade slide" data-ride="carousel">
                                <div class="carousel-inner">
                                    {% for image in blog_post.images %}
                                        <div class="carousel-item {% if loop.index0 == 0 %}active{% endif %}">
                                            <img class="card-img rounded-0" src="{{ asset('images/blog/') }}{{ image.image }}" alt="{{ blog_post.title|raw }}">
                                        </div>
                                    {% endfor %}
                                </div>
                                <a class="carousel-control-prev" href="#carousel-{{ blog_post.id }}" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carousel-{{ blog_post.id }}" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        {% else %}
                            {# {% for image in blog_post.images %}
                                <img class="card-img-left img-fluid" src="{{ asset('images/blog/')|imagine_filter('blog_post_600x400') }}{{ image.image }}" alt="{{ blog_post.title|raw }}">
                            {% endfor %} #}
                            <img class="card-img rounded-0" src="{{ asset('images/blog/') }}{{ blog_post.images[0].image }}" alt="{{ blog_post.title|raw }}">
                        {% endif %}

                        <div class="card-footer text-right">
                            <a class="btn btn-sm btn-pill btn-primary" href="https://twitter.com/intent/tweet?url={{ app.request.getUri }}&text={{ blog_post.title|raw }}" target="_blank" title="Tweet this on Twitter"><i class="fab fa-fw fa-twitter"></i> Tweet</a>
                            <a class="btn btn-pill btn-sm btn-primary" href="https://facebook.com/sharer.php?u={{ app.request.getUri }}&t={{ blog_post.title|raw }}" target="_blank" title="Share this on Facebook"><i class="fab fa-fw fa-facebook-f"></i> Share</a>
                            <a class="btn btn-pill btn-sm btn-primary" href="https://plus.google.com/share?url={{ app.request.getUri }}" target="_blank" title="Post this to Google+"><i class="fab fa-fw fa-google-plus-g"></i> Share</a>
                        </div>
                    </div>
                    <p>
                        {{ blog_post.excerpt|raw }}
                    </p>
                    <p>
                        {{ blog_post.content|raw }}
                    </p>
                    <a href="{{ path('blog_post_index') }}">Back to the list</a>
                </div>
            </div>

        </div>
    </section>
</div>
