{% extends 'base.html.twig' %}

{% block title %}New Contact{% endblock %}
{% block stylesheets %}{% endblock %}

{% block body %}

<section class="contact d-flex flex-shrink-0 section-min-h-100">
    <div class="container-fluid">
        <div class="row section-min-h-100">
            <div class="col-lg-4 d-flex justify-content-center align-items-center bg-secondary">
                <div class="contact-info text-white section-py-80">
                    <h2>Contact info</h2>
                    <h3><i class="fas fa-fw fa-map-marker-alt"></i> Address</h3>
                    <p>4567/15 Street name<br/> 012 34 City name<br/> Country name</p>
                    <h3><i class="fas fa-fw fa-mobile-alt"></i> Telephone</h3>
                    <ul class="list-unstyled">
                        <li><a href="tel:+012345678910">+012 345 678 910</a></li>
                        <li><a href="tel:+012345678911">+012 345 678 911</a></li>
                        <li><a href="tel:+012345678911">+012 345 678 911</a></li>
                    </ul>
                    <h3><i class="far fa-fw fa-envelope"></i> E-Mail</h3>
                    <ul class="list-unstyled">
                        <li><a href="mailto:info@domain.com">info@domain.com</a></li>
                        <li><a href="mailto:support@domain.com">support@domain.com</a></li>
                        <li><a href="mailto:director@domain.com">director@domain.com</a></li>
                    </ul>
                    <h3><i class="far fa-fw fa-clock"></i> Business hours</h3>
                    <p>Monday - Friday — 08:00 - 16:00<br/> Saturday — Closed<br/> Sunday — Closed</p>
                    <a data-selector="navbar-scroll-slide" href="#map">
                        <span class="d-block mb-2">Mapa google</span>
                        <i class="fa fa-arrow-down animated-arrow"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-8 d-flex justify-content-center align-items-center">
                <div class="contact-form section-py-80">
                    <h2 class="text-center">Contact form</h2>
                    {% if app.session.flashbag.peek('message-sent')|length > 0 %}
                        {% for message in app.flashes('message-sent') %}
                            <div class="alert alert-success">
                                {{ message|trans }}
                            </div>
                        {% endfor %}
                        {{ include('contact/contact_email.html.twig') }}
                        <a href="{{ path('contact_new') }}" class="btn btn-lg btn-pill btn-outline-midnight-blue">New message</a>
                    {% else %}
                        {{ include('contact/_form.html.twig') }}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</section>
