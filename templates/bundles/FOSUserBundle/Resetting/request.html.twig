{% extends 'base.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
<section class="d-flex flex-shrink-0 align-items-center section-pb-80 section-pt-152 section-min-h-100 bg-clouds">
    <div class="container">
        <div class="row justify-content-center mb-3">
            <div class="col-lg-6">
                <div class="card border-0 shadow-clouds-concave-145 py-3">
                    <div class="card-body">
                       <div class="title title-white d-flex justify-content-center align-items-center mb-4 mt-4">
                            <h2>FORM</h2>
                            <h3>Reset</h3>
                        </div>
						<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
						    <div class="form-group">
						        <label for="username">{{ 'resetting.request.username'|trans }}</label>
						        <input class="form-control" type="text" id="username" name="username" required="required" />
						    </div>
						    <div class="text-center">
						        <input class="btn btn-lg btn-pill btn-midnight-blue" type="submit" value="{{ 'resetting.request.submit'|trans }}" />
						    </div>
						</form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
