{% extends 'base.html.twig' %}

{% block title %}Reset{% endblock %}

{% block body %}
<section class="d-flex flex-shrink-0 align-items-center section-pb-80 section-pt-152 section-min-h-100 bg-clouds">
    <div class="container">
        <div class="row justify-content-center mb-3">
            <div class="col-lg-6">
                <div class="card border-0 shadow-clouds-concave-145 pt-3">
                    <div class="card-body">
                        <div class="title title-white d-flex justify-content-center align-items-center mb-4 mt-4">
                            <h2>FORM</h2>
                            <h3>Reset</h3>
                        </div>
                        {% if app.user %}
                            <div class="mb-3 text-center">
                                Your message has been sent. Thank you :)
                            </div>
                        {% else %}
                            <form method="post" novalidate {# class="{{error ? 'was-validated'}}" #}>
                                <div class="form-group">
                                    <label for="inputEmail">Email</label>
                                    <input type="email" value="" name="email" id="inputEmail" class="form-control" required autofocus>
                                </div>
                                <div class="text-center">
                                    <button class="btn btn-lg btn-pill btn-midnight-blue">Reset password</button>
                                </div>
                            </form>
                        {% endif %}
                    </div>
                    <div class="card-footer">
                        <p class="mb-1 small"><a href="{{ path('app_login') }}">Already have an account? <strong>Sign In</strong></a></p>
                        <p class="mb-1 small"><a href="{{ path('app_register') }}">Don't have an account? <strong>Register</strong></a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
