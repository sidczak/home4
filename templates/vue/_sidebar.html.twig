                        <ul id="dropdownThird" class="collapse" aria-labelledby="headingDropdownThird">
                            <li>
                                <a href="{{ path('examples_album') }}">Album</a>
                            </li>
                            <li>
                                <a href="{{ path('examples_pricing') }}">Pricing</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </li>
            #}
        </ul>
    </div>
</div>

